#define THREAD_GROUP_SIZE_X 10
#define THREAD_GROUP_SIZE_Y 10
#define THREAD_GROUP_SIZE_Z 10

#include "ComputeTextureSampling.cginc"

//|||||||||||||||||||||||||||||||||||||| VARIABLES ||||||||||||||||||||||||||||||||||||||
//|||||||||||||||||||||||||||||||||||||| VARIABLES ||||||||||||||||||||||||||||||||||||||
//|||||||||||||||||||||||||||||||||||||| VARIABLES ||||||||||||||||||||||||||||||||||||||

Texture3D<float4> AddBufferA;
Texture3D<float4> AddBufferB;

RWTexture3D<float4> Write;

float3 VolumeResolution;

//||||||||||||||||||||||||||||| ComputeShader_AddBuffers |||||||||||||||||||||||||||||
//||||||||||||||||||||||||||||| ComputeShader_AddBuffers |||||||||||||||||||||||||||||
//||||||||||||||||||||||||||||| ComputeShader_AddBuffers |||||||||||||||||||||||||||||

#pragma kernel ComputeShader_AddBuffers
[numthreads(THREAD_GROUP_SIZE_X, THREAD_GROUP_SIZE_Y, THREAD_GROUP_SIZE_Z)]
void ComputeShader_AddBuffers(uint3 id : SV_DispatchThreadID)
{
    float3 voxelPosition = id.xyz + float3(0.5, 0.5, 0.5);
    voxelPosition /= VolumeResolution.xyz;

    float4 addBufferA = TEX3D_SHARP(AddBufferA, voxelPosition);
    float4 addBufferB = TEX3D_SHARP(AddBufferB, voxelPosition);

    Write[id.xyz] = addBufferA + addBufferB;
}